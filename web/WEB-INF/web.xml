<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>pe.edu.ulima.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>pe.edu.ulima.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>pe.edu.ulima.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrarLibroServlet</servlet-name>
        <servlet-class>pe.edu.ulima.servlet.RegistrarLibroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrarLibroServlet</servlet-name>
        <url-pattern>/registrarLibro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditarLibroServlet</servlet-name>
        <servlet-class>pe.edu.ulima.servlet.EditarLibroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditarLibroServlet</servlet-name>
        <url-pattern>/editarLibro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BorrarLibroServlet</servlet-name>
        <servlet-class>pe.edu.ulima.servlet.BorrarLibroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BorrarLibroServlet</servlet-name>
        <url-pattern>/borrarLibro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetalleServlet</servlet-name>
        <servlet-class>pe.edu.ulima.servlet.DetalleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetalleServlet</servlet-name>
        <url-pattern>/detalleLibro</url-pattern>
    </servlet-mapping>

</web-app>